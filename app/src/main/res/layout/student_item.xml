<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">




    <ImageView

        android:id="@+id/student_item__avatar_student"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_margin="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/avatar_1"
        android:scaleType="centerCrop"
        />






    <TextView
        android:id="@+id/student_item__name_student"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        tools:text="Имя"
        android:maxLines="2"
        android:paddingStart="10dp"
        android:paddingLeft="10dp"
        android:paddingEnd="10dp"
        android:paddingRight="10dp"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toTopOf="@+id/student_item__avatar_student"
        app:layout_constraintBottom_toBottomOf="@id/student_item__avatar_student"
        app:layout_constraintStart_toEndOf="@+id/student_item__avatar_student"
        app:layout_constraintEnd_toStartOf="@id/student_item__surname_student"
        app:layout_constraintVertical_chainStyle="packed"
        android:gravity="center"

        />

    <TextView
        android:id="@+id/student_item__surname_student"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Фамилия"
        android:paddingStart="15dp"
        android:paddingLeft="10dp"
        android:paddingEnd="10dp"
        android:paddingRight="10dp"
        android:textSize="20sp"
        android:maxLines="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/student_item__name_student"
        app:layout_constraintBaseline_toBaselineOf="@id/student_item__name_student" />




</androidx.constraintlayout.widget.ConstraintLayout>